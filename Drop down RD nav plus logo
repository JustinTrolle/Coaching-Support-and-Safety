<!-- JavaScript for Accordion Functionality -->
<script>
function toggleRaceDirectorAccordion() {
  const content = document.getElementById('raceDirectorContent');
  const icon = document.getElementById('rdAccordionToggleIcon');
  const accordion = document.getElementById('raceDirectorAccordion');
  
  if (content.style.display === 'none' || content.style.display === '') {
    // Open accordion
    content.style.display = 'block';
    setTimeout(function() {
      content.style.opacity = '1';
    }, 10);
    icon.style.transform = 'rotate(180deg)';
    accordion.style.borderRadius = '12px 12px 0 0';
  } else {
    // Close accordion
    content.style.opacity = '0';
    setTimeout(function() {
      content.style.display = 'none';
    }, 300);
    icon.style.transform = 'rotate(0deg)';
    accordion.style.borderRadius = '12px';
  }
}
</script>

